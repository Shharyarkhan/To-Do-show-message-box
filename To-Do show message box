
import tkinter as tk
from tkinter import messagebox

# Create the main application window
root = tk.Tk()
root.title("To-Do List App")

# Create a list to store tasks
tasks = []

# Function to add a task to the list
def add_task():
    task = entry.get()
    if task != "":
        tasks.append(task)
        listbox.insert(tk.END, task)
        entry.delete(0, tk.END)
    else:
        messagebox.showwarning("Warning", "You need to enter a task.")

# Function to delete a selected task
def delete_task():
    selected_task_index = listbox.curselection()
    if selected_task_index:
        task = selected_task_index[0]
        listbox.delete(task)
        tasks.pop(task)
    else:
        messagebox.showwarning("Warning", "You need to select a task to delete.")

# Create UI elements
entry = tk.Entry(root, width=40)
entry.pack(pady=10)

add_button = tk.Button(root, text="Add Task", width=30, command=add_task)
add_button.pack(pady=10)

listbox = tk.Listbox(root, width=50, height=10)
listbox.pack(pady=10)

delete_button = tk.Button(root, text="Delete Task", width=30, command=delete_task)
delete_button.pack(pady=10)

# Run the application
root.mainloop()
